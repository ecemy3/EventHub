
@{
    ViewBag.Title = "EventMessage";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
@model eventhub.Models.EventHubModel
<h3 class="uk-text-lead">Chats</h3>
<div class="uk-grid uk-grid-small" data-uk-grid>
    <div class="uk-width-1-3@l">
        <div class="chat-user-list">
            <div class="chat-user-list__box">
                <div class="chat-user-list__body">
                    <ul>
                        @if (Model.EventForUser != null)
                        {
                           foreach (var item in Model.EventForUser)
                            {
                                <li>
                                    <div class="user-item --active">
                                        <div class="user-item__avatar"><img src="~/assets/eBanner/@item.EventBanner" alt="user"></div>
                                        <div class="user-item__desc">
                                            <div class="user-item__name"><a href="/Message/EventMessage/@item.ID">@item.EventName</a></div>
                                            <div class="user-item__text">@item.Description</div>
                                        </div>
                                        <div class="user-item__info">
                                            <div class="user-item__time">4m</div>
                                            <div class="user-item__count">1</div>
                                        </div>
                                    </div>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="uk-width-2-3@l">
        <div class="chat-messages-box">
            <div class="chat-messages-head">
                <div class="user-item">
                    <div class="user-item__avatar"><img src="~/assets/eBanner/@Model.MessageForEvent[0].Message.Event.EventBanner" alt="user"></div>
                    <div class="user-item__desc">
                        <div class="user-item__name">@Model.MessageForEvent[0].Message.Event.EventName</div>
                    </div>
                </div>
                <div><a class="ico_call" href="#!"></a><a class="ico_info-circle" href="#!"></a></div>
            </div>
            <div class="chat-messages-body">
                @if (Model.MessageForEvent != null)
                {
                    foreach (var item in Model.MessageForEvent)
                    {
                        if (item.UserID == Model.userID)//Bu mesajı ben gönderdim.
                        {

                            <div class="messages-item --your-message">
                                <a style="font-size: 12px;" href="">@Model.GetUser(item.UserID).FirstName @Model.GetUser(item.UserID).LastName</a>
                                <div class="messages-item__avatar"><img src="~/assets/pImage/@Model.GetUser(item.UserID).ProfilePicture" width="40" height="40" alt="user"></div>
                                <div class="messages-item__text">@item.Comment</div>
                            </div>
                            <br />
                            <br />
                        }
                        else//Başkası yazdı.
                        {
                            <div class="messages-item --friend-message">
                                <div class="messages-item__text">@item.Comment</div>
                                <div class="messages-item__avatar"><img src="~/assets/pImage/@Model.GetUser(item.UserID).ProfilePicture" width="25" height="25" alt="user"></div>
                                <a style="font-size: 12px;" href="">@Model.GetUser(item.UserID).FirstName @Model.GetUser(item.UserID).LastName</a>
                            </div>
                        }

                    }
                }




            </div>
            <div class="chat-messages-footer">
                <form action="/Message/SendMessage/@Model.MessageForEvent[0].Message.EventID" method="post">
                    <div class="chat-messages-form">
                        <div class="chat-messages-form-btns"><button type="submit" class="ico_arrow-circle-right"></button></div>
                        <div class="chat-messages-form-controls"><input class="chat-messages-input" type="text" name="comment" placeholder="Type a message"></div>
                       
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

